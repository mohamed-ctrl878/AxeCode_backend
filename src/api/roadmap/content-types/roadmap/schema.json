{
    "kind": "collectionType",
    "collectionName": "roadmaps",
    "info": {
        "singularName": "roadmap",
        "pluralName": "roadmaps",
        "displayName": "Roadmap"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "title": {
            "type": "string",
            "required": true
        },
        "description": {
            "type": "blocks"
        },
        "flowData": {
            "type": "json"
        },
        "color": {
            "type": "string",
            "default": "#FFD700"
        },
        "tags": {
            "type": "json"
        },
        "icon": {
            "type": "string",
            "default": "faMapSigns"
        },
        "author": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "plugin::users-permissions.user"
        }
    }
}